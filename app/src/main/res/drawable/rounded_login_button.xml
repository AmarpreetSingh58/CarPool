<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="50dp"/>
            <gradient android:angle="-90" android:centerColor="#1ac6ff" android:startColor="#007399"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="50dp"/>
            <gradient android:angle="-90" android:centerColor="#80ff80" android:startColor="#00ff00"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp"/>
            <gradient android:angle="-90" android:centerColor="#80dfff" android:startColor="#00bfff" android:endColor="#004d66"/>
        </shape>
    </item>

</selector>