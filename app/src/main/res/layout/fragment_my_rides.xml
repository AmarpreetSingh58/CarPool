<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueBackground"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_my_rides"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <View
        android:id="@+id/view_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mask_view"
        android:visibility="gone" />

    <io.github.yavski.fabspeeddial.FabSpeedDial
        android:id="@+id/first_screen_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabBackgroundTint="@color/green"
        app:fabDrawableTint="@color/blueBackground"
        app:fabGravity="bottom_end"
        app:fabMenu="@menu/first_screen_fab_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:miniFabBackgroundTint="@color/green"
        app:miniFabDrawableTint="@color/blueBackground"
        app:useCompatPadding="true" />

</androidx.constraintlayout.widget.ConstraintLayout>