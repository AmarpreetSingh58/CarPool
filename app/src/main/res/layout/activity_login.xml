<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAndRegistration.Login">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_password"
        android:inputType="textPassword"
        android:id="@+id/login_password_input"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="32dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:id="@+id/login_email_input"
        app:layout_constraintBottom_toTopOf="@id/login_password_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="32dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_sign_in_short"
        android:id="@+id/login_button"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/login_password_input"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="60dp"
        style="@style/Widget.MaterialComponents.Button"
        android:textAppearance="@style/Widget.MaterialComponents.Button"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

   <com.google.android.material.button.MaterialButton
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/register"
       android:textSize="16sp"
       android:textColor="@color/colorPrimaryDark"
       android:id="@+id/register_button"
       style="@style/Widget.MaterialComponents.Button.TextButton"
       app:layout_constraintTop_toBottomOf="@id/login_password_input"
       app:layout_constraintRight_toLeftOf="@id/login_button"
       android:background="@android:color/transparent"
       android:textAppearance="@style/Widget.MaterialComponents.Button.TextButton"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget_password"
        android:textSize="16sp"
        android:id="@+id/forgetpassword_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:color/transparent"
        android:textAppearance="@style/Widget.MaterialComponents.Button"
        android:layout_marginEnd="60dp"
        android:textColor="@android:color/darker_gray"/>
</androidx.constraintlayout.widget.ConstraintLayout>