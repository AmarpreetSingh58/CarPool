<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.carpool">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_carpool_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_carpool_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".rideActionActivities.PostRide" />
        <activity android:name=".loginAndRegistration.SignUpActivity" />
        <activity android:name=".loginAndRegistration.RegisterOrLoginActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FirstScreen" />
        <activity android:name=".loginAndRegistration.LoginActivity" />
        <activity android:name=".onBoarding.CustomIntro" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>